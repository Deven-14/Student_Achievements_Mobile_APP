            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="submit"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/submitBtn"
            android:backgroundTint="@color/royal_blue"/>

    </LinearLayout>


